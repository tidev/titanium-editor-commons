{
  "name": "titanium-editor-commons",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Axway, Inc. <npmjs@appcelerator.com>",
  "maintainers": [
    "Ewan Harris <eharris@axway.com>"
  ],
  "license": "Apache-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "compile": "tsc -p ./",
    "lint": "eslint --ext .ts src/ tests/",
    "prepack": "npm run compile",
    "release": "semantic-release",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "JUNIT_REPORT_PATH=junit_report.xml nyc mocha tests/setup.ts tests/*-test.ts --reporter=mocha-jenkins-reporter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcelerator/titanium-editor-commons.git"
  },
  "keywords": [],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@seadub/danger-plugin-dependencies": "^0.1.0",
    "@seadub/danger-plugin-eslint": "^2.0.0",
    "@seadub/danger-plugin-junit": "^0.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.4",
    "@types/fs-extra": "^9.0.0",
    "@types/got": "^9.6.9",
    "@types/mocha": "^8.0.0",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "~12.12.50",
    "@types/semver": "^7.1.0",
    "@types/sinon": "^9.0.0",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "danger": "^10.0.0",
    "eslint": "^6.6.0",
    "eslint-config-axway": "^4.4.0",
    "eslint-plugin-mocha": "^6.2.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.0",
    "mocha": "^8.0.1",
    "mocha-jenkins-reporter": "^0.4.2",
    "mock-fs": "^4.10.3",
    "nock": "^13.0.0",
    "nyc": "^15.0.0",
    "semantic-release": "^17.1.1",
    "sinon": "^9.0.1",
    "tmp": "^0.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "appcd-subprocess": "^3.0.1",
    "fs-extra": "^9.0.0",
    "got": "^9.6.0",
    "libnpm": "^3.0.1",
    "semver": "^7.1.3",
    "titaniumlib": "^3.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html",
      "lcov",
      "cobertura"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [ "@semantic-release/github", {
        "successComment": false
      }]
    ]
  }
}
